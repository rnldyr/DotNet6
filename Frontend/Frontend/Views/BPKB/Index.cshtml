@model IEnumerable<Frontend.Models.ViewModels.BPKBViewModel>

@{
    ViewData["Title"] = "Transaction List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Transaction List</h2>
        <a href="@Url.Action("Create", "BPKB")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Transaction
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Agreement Number</th>
                    <th scope="col">BPKB No</th>
                    <th scope="col">Branch ID</th>
                    <th scope="col">BPKB Date</th>
                    <th scope="col">Faktur No</th>
                    <th scope="col">Faktur Date</th>
                    <th scope="col">Location Name</th>
                    <th scope="col">Police No</th>
                    <th scope="col">BPKB Date In</th>
                    <th scope="col">Created By</th>
                    <th scope="col">Created On</th>
                    <th scope="col">Last Updated By</th>
                    <th scope="col">Last Updated On</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AgreementNumber</td>
                        <td>@item.BpkbNo</td>
                        <td>@item.BranchId</td>
                        <td>@item.BpkbDate?.ToString("yyyy-MM-dd")</td>
                        <td>@item.FakturNo</td>
                        <td>@item.FakturDate?.ToString("yyyy-MM-dd")</td>
                        <td>@item.LocationName</td>
                        <td>@item.PoliceNo</td>
                        <td>@item.BpkbDateIn?.ToString("yyyy-MM-dd")</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedOn?.ToString("yyyy-MM-dd")</td>
                        <td>@item.LastUpdatedBy</td>
                        <td>@item.LastUpdatedOn?.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id = item.AgreementNumber })" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
